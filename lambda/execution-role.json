{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:us-east-1:289491622160:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:289491622160:log-group:/aws/lambda/lambda-layers-demo:*"
            ]
        },
        {
            "Sid": "ReadFromS3",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::oo-lambda-layers-demo",
                "arn:aws:s3:::oo-lambda-layers-demo/*"
            ]
        },
        {
            "Sid": "WriteHTMLToS3",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::oo-lambda-layers-demo/html/*"
            ]
        },
        {
            "Sid": "AccessSecretsManager",
            "Effect": "Allow",
            "Action": [
                "secretsmanager:GetSecretValue"
            ],
            "Resource": [
                "arn:aws:secretsmanager:us-east-1:289491622160:secret:token_cred*"
            ]
        }
    ]
}